    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-audit-resolver": "^3.0.0-7",
    "nx": "^14.0.3",
    "prettier": "^2.6.2",
    "syncpack": "^7.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  },
